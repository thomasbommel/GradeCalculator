<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.sallaberger.thomas.myapplication.MainActivity">

    <ImageButton
        android:id="@+id/activity_main_ibtn_addUser"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_height_small"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_main_rv_user_list"
        android:layout_width="match_parent"
        android:layout_height="213dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_main_ibtn_addUser"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
