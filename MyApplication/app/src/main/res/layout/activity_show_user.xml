<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.sallaberger.thomas.myapplication.activities.ShowUserActivity">

    <ImageButton
        android:id="@+id/activity_show_user_btn_addYear"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_height_small"
        android:src="@drawable/ic_add_black_24dp"
        android:text="@string/btn_addYear"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        />

    <ImageButton
        android:id="@+id/activity_show_user_settings"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_height_small"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:src="@drawable/ic_settings_black_24dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_show_user_rv_schoolyear_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_show_user_btn_addYear"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/activity_show_user_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_show_user_rv_schoolyear_list"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp"
        android:layout_toEndOf="@+id/activity_show_user_btn_addYear"
        android:layout_toRightOf="@+id/activity_show_user_btn_addYear"
        android:text="username"
        android:textSize="@dimen/label_text_size"/>
</RelativeLayout>
